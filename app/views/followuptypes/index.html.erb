<div class="page-container">
    <!-- BEGIN PAGE HEAD -->
    <div class="page-head">
        <div class="container-fluid">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Follow Up Types <small>Find and manage follow up types</small></h1>
            </div>
            <!-- END PAGE TITLE -->
            <!-- BEGIN PAGE TOOLBAR -->
            <div class="page-toolbar">
                <!-- BEGIN THEME PANEL -->
                
            </div>
            <!-- END PAGE TOOLBAR -->
        </div>
    </div>
    <!-- END PAGE HEAD -->
    <!-- BEGIN PAGE CONTENT -->
    <div class="page-content">
        <div class="container-fluid">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            Widget settings form goes here
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn blue">Save changes</button>
                            <button type="button" class="btn default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li class="active">
                    Follow Up Types
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN TODO SIDEBAR -->
                    <div class="todo-sidebar">
                        <div class="portlet light">
                            <div class="portlet-title">
                                <div class="caption" data-toggle="collapse" data-target=".todo-project-list-content">
                                    <span class="caption-subject font-green-sharp bold"><span class="icon-plus" aria-hidden="false"></span> Add Follow Up Type</span>
                                    <span class="caption-helper visible-sm-inline-block visible-xs-inline-block">click to view Follow Up Types list</span>
                                </div>                                        
                            </div>
                             <div id="error_explanation">
                                        <% if flash[:notice] %>
                                            <div id="login-response-block" class="alert alert-danger display-hide" style="display:block;">
                                                <button class="close" data-close="alert"></button>
                                                <span><%= flash[:notice] %></span>
                                            </div>
                                        <% end %>
                                </div>
                                
                            <form id="new_followuptype" class="new_followuptype" method="post" accept-charset="UTF-8" action="/followuptypes">
                                    <div class="form-group">
                                        <label class="control-label" for="inputWarning">Title <span class="required">*</span></label>                 
                                        <input type="text"  name="v_title" attrName="followuptype[v_title]" placeholder="Title" class="form-control"/>
                                    </div>                                    
                                    <div class="form-group">
                                        <label class="control-label" for="inputWarning">Select Color <span class="required">*</span></label>
                                        <input type="text" name="v_color" attrName="followuptype[v_color]" class="form-control colorpicker-default" placeholder="Color" />                                       
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-0">           
                                                <button type="submit" id="submit_followup_action" class="btn green-haze">
                                                  Save </button>
                                                  <button type="reset" class="btn default">
                                                  Reset </button>
                                                
                                            </div>
                                        </div>      
                                    </div>
                                </form>
                        </div>                            
                    </div>
                    <!-- END TODO SIDEBAR -->
                    <!-- BEGIN TODO CONTENT -->
                    <div class="todo-content">
                        <div class="portlet light">
                            <div class="portlet-title no-border margin-bottom-0 col-md-4">
                                <div class="caption">
                                    <span class="caption-subject font-green-sharp bold uppercase">Showing: All Follow Up Types</span>
                                </div>                               
                            </div>

                            <div class="portlet-body">
                            <form name="edit-followuptypes-form" action="/followuptypes" method ="get" id="edit-followuptypes-form">
                                <table id="sample_editable_1" class="table table-striped table-hover table-bordered dataTable no-footer" role="grid" aria-describedby="sample_editable_1_info">
                                    <thead>
                                        <tr role="row">
                                            <th width="25%" class="sorting_asc" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Title">Title</th>
                            				<th width="25%" aria-label="Color">Color</th>
                            				<th aria-label="Edit">Edit</th>
                            				<th aria-label="Delete">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% @followuptypes.each do |followuptype|%>
                                        <tr role="row">
                                            <td>
                                                <%= followuptype.v_title %>
                                            </td>
                                            <td>
                                                <div class="input-group color colorbg" data-color=<%=followuptype.v_color %> data-color-format="rgba">
                                                    <span class="input-group-btn"><button class="btn default" type="button"><i style="background-color: <%=followuptype.v_color %>;"></i>&nbsp;</button></span>
                                                    &nbsp; <%=followuptype.v_color %>
                                                </div>
                                            </td>
                                            <td>
                            					<%= link_to 'Edit', edit_followuptype_path(followuptype), :edit_id => followuptype.id , :class =>"edit" %>
                            				</td>
                            				<td>
                            					<%= link_to 'Delete', followuptype_path(followuptype), :method => :delete, :class =>"delete", :deleteid =>followuptype.id, :remote => true %>
                            				</td>
                                        </tr> 
                                        <% end %>                                         
                                    </tbody>
                                </table>
                            </form>
                            </div>
                        </div>
                    </div>
                    <!-- END TODO CONTENT -->
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
        </div>
    </div>
    <!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER -->
<link href="/css/todo.css" rel="stylesheet" type="text/css" />
<link href="/plugins/bootstrap-colorpicker/css/colorpicker.css" rel="stylesheet" type="text/css"/>
<script src="/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js" type="text/javascript"></script>
<script src="/plugins/datatables/media/js/jquery.dataTables.min.js" type="text/javascript" ></script>
<script src="/js/table-editable.js"></script>
<script>
    jQuery(document).ready(function() {  
        Metronic.init(); 
        setTimeout(function(){
                TableEditable.init();
                }, 
                    200);       
        if (jQuery().colorpicker) {
            $('.colorpicker-default').colorpicker({ format: 'hex' });
            $('.colorpicker-rgba').colorpicker();
        }     
        jQuery('#submit_followup_action').click(function(event) { 
                    event.preventDefault();
                    if (jQuery('#new_followuptype').validate().form()) { 
                        jQuery('#new_followuptype .form-control').each(function() {
                            jQuery(this).attr('name', jQuery(this).attr('attrName'));
                        });
                        jQuery('#new_followuptype').submit();
                    }
            });
    });
</script>