<div class="page-container">
    <!-- BEGIN PAGE HEAD -->
    <div class="page-head">
        <div class="container-fluid">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Sales People<small> Find and manage sales people</small></h1>
            </div>
            <!-- END PAGE TITLE -->
            <!-- BEGIN PAGE TOOLBAR -->
            <div class="page-toolbar">
                <!-- BEGIN THEME PANEL -->
                
            </div>
            <!-- END PAGE TOOLBAR -->
        </div>
    </div>    
    <!-- END PAGE HEAD -->
    
    <div class="page-content">
        <div class="container-fluid">
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="/dashboard">Dashboard</a><i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="/sales">Sales People</a><i class="fa fa-circle"></i>
                </li>
                <li class="active">
                    Add
                </li>                   
            </ul>
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light" id="form_wizard_1">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">
                                    <i class="fa fa-user"></i> Add Sales Person</span>
                            </div>
                        </div>
                        <div class="portlet-body form">

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => 'form_sample_3', :class=> "horizontal-form" }) do |f| %>
              <%= devise_error_messages! %>
                  <div class="alert alert-success display-hide">
                                    <button class="close" data-close="alert"></button>
                                    Sales person information are successfully Added! 
                  </div>

                  <div class="alert alert-danger display-hide">
                                    <button class="close" data-close="alert"></button>
                                    You have some form errors. Please check below.
                  </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">First Name <span class="required">*</span>
                                            </label>
                                            <%= f.email_field :email, autofocus: true, :placeholder=>"Your first name", :class=>"form-control"%>
                                        </div>
                                    </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">First Name <span class="required">*</span>
                                            </label>
                                          <%= f.password_field :password, autocomplete: "off", :placeholder=>"Your password", :class=>"form-control"%>
                                        </div>
                                    </div>

                                <div class="actions">
                                  <%= f.submit "Sign up" %>
                                </div>
                                <% end %>
                          </div>



                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
        </div>
    </div>
 </div>
 <!-- END PAGE CONTENT -->        
<%#= render "devise/shared/links" %>
